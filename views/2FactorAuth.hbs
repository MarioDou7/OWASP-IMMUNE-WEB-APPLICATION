</head>

{{!-- Navigation links --}}
<nav class="navbar p-4 navbar-expand-lg navbar-dark bg-dark">
    <h4 class="navbar-brand">Two Factor Authentication</h4>
    <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
            </li>
        </ul>
    </div>
</nav>

{{!-- Success Messages --}}
{{#if success }}
<h6 class="alert alert-success mt-4">{{success}}</h6>
{{/if}}

{{!-- Body --}}

<body>
    <div class="container mt-4">
        <div class="card" style="width: 18rem;">
            <div class="card-header">Enter 4-digits</div>
            <div class="card-body">
                <form action="/auth/2FactorAuth" method="POST">
                    <div class="mb-3">
                        <input type="tel" class="form-control" name="pin" maxlength="4"  required>
                    </div>
                    <button type="submit" class="btn btn-primary">Confirm</button>
                </form>
            </div>
        </div>
    </div>
    </div>
</body>

</html>